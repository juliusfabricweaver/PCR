{
  "name": "pcr-application",
  "version": "1.0.0",
  "description": "Modern Patient Care Report web application built with React and TypeScript",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "vite",
    "frontend:build": "vite build",
    "backend:dev": "npx ts-node --transpile-only src/backend/src/index.ts",
    "backend:build": "tsc -p src/backend/tsconfig.json",
    "create-accounts": "ts-node src/backend/src/scripts/create-users.ts",
    "build": "npm run frontend:build && npm run backend:build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level=moderate",
    "prepare-release": "npm run lint && npm run type-check && npm run test && npm run security-audit",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3,bcrypt,canvas",
    "electron:dev": "npm run electron:build && electron .",
    "electron:start": "concurrently \"npm run frontend:dev\" \"npm run electron:dev\"",
    "electron:package": "npm run build && npm run electron:build && electron-builder",
    "electron:package:mac": "npm run build && npm run electron:build && electron-builder --mac",
    "electron:package:win": "npm run build && npm run electron:build && electron-builder --win",
    "electron:package:linux": "npm run build && npm run electron:build && electron-builder --linux"
  },
  "keywords": [
    "pcr",
    "patient-care-report",
    "ems",
    "medical",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/fabric": "^5.3.10",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fabric": "^6.7.1",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.263.1",
    "pdf-lib": "^1.17.1",
    "rate-limiter-flexible": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.20.1",
    "sql.js": "^1.11.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^12.0.0",
    "winston": "^3.10.0"
  },
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=10.0.0"
  },
  "build": {
    "appId": "com.pcr.application",
    "productName": "PCR Application",
    "copyright": "Copyright Â© 2025",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "asarUnpack": [
      "**/node_modules/**/*",
      "**/dist/backend/**/*",
      "**/initial_database.db"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "src/backend/src/database/schema.sql",
      "initial_database.db"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.medical",
      "icon": "assets/icon.icns",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon-256.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
